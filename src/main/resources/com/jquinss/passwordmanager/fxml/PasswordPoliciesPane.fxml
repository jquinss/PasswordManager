<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="366.0"
         prefWidth="525.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.171"
         xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../styles/styles.css"
         fx:controller="com.jquinss.passwordmanager.controllers.PasswordPoliciesPaneController">
    <Tab text="Password Enforcement policies">
        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
            <padding>
                <Insets left="50.0" right="50.0" top="20.0"/>
            </padding>
            <Label text="Manage Password Enforcement policies:" styleClass="dialog-title"/>
            <TableView fx:id="passwordEnforcementPoliciesTableView" prefHeight="200.0" prefWidth="200.0">
                <placeholder>
                    <Label text="No policies have been created"/>
                </placeholder>
                <columns>
                    <TableColumn fx:id="passwordEnforcementPolicyNameTableColumn" minWidth="169.0"
                                 prefWidth="169.0" text="Name"/>
                    <TableColumn fx:id="passwordEnforcementIsDefaultPolicyTableColumn" minWidth="145.0"
                                 prefWidth="145.0" text="Default"/>
                </columns>
            </TableView>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                <children>
                    <Button mnemonicParsing="false" onAction="#addPasswordEnforcementPolicy"
                            styleClass="btn, dialog-btn" text="Add"/>
                    <Button mnemonicParsing="false" onAction="#removePasswordEnforcementPolicy"
                            styleClass="btn, dialog-btn" text="Remove"/>
                    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                            onAction="#editPasswordEnforcementPolicy" styleClass="btn, dialog-btn" text="Edit"/>
                </children>
                <padding>
                    <Insets top="10.0"/>
                </padding>
            </HBox>
        </VBox>
    </Tab>
    <Tab text="Password Generator policies">
        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
            <padding>
                <Insets left="50.0" right="50.0" top="20.0"/>
            </padding>
            <Label text="Manage Password Generator policies:" styleClass="dialog-title"/>
            <TableView fx:id="passwordGeneratorPoliciesTableView" prefHeight="200.0" prefWidth="200.0">
                <placeholder>
                    <Label text="No policies have been created"/>
                </placeholder>
                <columns>
                    <TableColumn fx:id="passwordGeneratorPolicyNameTableColumn" minWidth="169.0"
                                 prefWidth="169.0" text="Name"/>
                    <TableColumn fx:id="passwordGeneratorIsDefaultPolicyTableColumn" minWidth="145.0"
                                 prefWidth="145.0" text="Default"/>
                </columns>
            </TableView>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                <padding>
                    <Insets top="10.0"/>
                </padding>
                <Button mnemonicParsing="false" onAction="#addPasswordGeneratorPolicy"
                        styleClass="btn, dialog-btn" text="Add"/>
                <Button mnemonicParsing="false" onAction="#removePasswordGeneratorPolicy"
                        styleClass="btn, dialog-btn" text="Remove"/>
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                        onAction="#editPasswordGeneratorPolicy" styleClass="btn, dialog-btn" text="Edit"/>
            </HBox>
        </VBox>
    </Tab>
</TabPane>
