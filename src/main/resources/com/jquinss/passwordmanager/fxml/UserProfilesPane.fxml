<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<BorderPane visible="false" id="user-profiles-pane" fx:controller="com.jquinss.passwordmanager.controllers.UserProfilesPaneController"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
<top>
    <Label text="Manage Profiles" styleClass="main-menu-content-title">
        <BorderPane.margin>
            <Insets bottom="20"/>
        </BorderPane.margin>
    </Label>
</top>

<center>
    <TableView fx:id="userProfilesTableView">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <placeholder>
            <Label text="No profiles have been created"/>
        </placeholder>
        <columns>
            <TableColumn fx:id="userProfileNameTableColumn" resizable="false" reorderable="false"
                         prefWidth="242" text="Name"/>
            <TableColumn fx:id="isDefaultUserProfileTableColumn" resizable="false" reorderable="false"
                         prefWidth="243" text="Default"/>
        </columns>
        <BorderPane.margin>
            <Insets bottom="20"/>
        </BorderPane.margin>
    </TableView>
</center>

<bottom>
    <VBox>
        <HBox spacing="15" alignment="CENTER">
            <Button text="Add Profile" prefWidth="150" prefHeight="40" styleClass="btn" onAction="#addUserProfile"/>
            <Button text="Delete Profile" prefWidth="150" prefHeight="40" styleClass="btn" onAction="#deleteUserProfile"/>
        </HBox>
        <HBox alignment="BOTTOM_RIGHT">
            <Label fx:id="message" text="Placeholder" visible="false" />
        </HBox>
    </VBox>
</bottom>
</BorderPane>
