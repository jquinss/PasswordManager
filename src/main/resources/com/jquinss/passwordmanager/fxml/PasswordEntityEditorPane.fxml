<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:id="passwordEntityEditorMainPane"
            fx:controller="com.jquinss.passwordmanager.controllers.PasswordEntityEditorPaneController" >
    <AnchorPane id="pwd-editor-pane" prefHeight="545.0" prefWidth="430.0" >
        <VBox layoutX="70.0" layoutY="50.0" prefHeight="479.0" prefWidth="477.0" spacing="30.0">
            <Label text="Title"/>
            <GridPane hgap="5.0" vgap="5.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="10.0" prefWidth="121.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="201.0" minWidth="10.0" prefWidth="167.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="124.0" minWidth="10.0" prefWidth="60.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0" minWidth="10.0" prefWidth="122.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="Name:"/>
                <Label text="Description:" GridPane.rowIndex="1"/>
                <Label text="Username:" GridPane.rowIndex="3"/>
                <Label text="Email address:" GridPane.rowIndex="4"/>
                <Label text="Password:" GridPane.rowIndex="5"/>
                <Label text="Generator Policy:" GridPane.rowIndex="7"/>
                <Label text="Enforcement Policy:" GridPane.rowIndex="8"/>
                <Label text="Password expires:" GridPane.rowIndex="9"/>
                <Label text="Expiration date:" GridPane.rowIndex="10"/>
                <Label text="URL:" GridPane.rowIndex="2"/>
                <TextField fx:id="nameTextField" GridPane.columnIndex="1"/>
                <TextField fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="urlTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextField fx:id="usernameTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <TextField fx:id="emailAddressTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <PasswordField fx:id="passwordField" />
                    <TextField fx:id="clearPasswordField" visible="false" />
                </StackPane>
                <ComboBox fx:id="passwordGeneratorPolicyComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                <ComboBox fx:id="passwordPolicyComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                <CheckBox fx:id="passwordExpiresCheckBox" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
                <DatePicker fx:id="passwordExpirationDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
                <Button id="copyUrlButton" mnemonicParsing="false" styleClass="copy-clipboard-button" onAction="#copyToClipboard" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <graphic>
                        <ImageView>
                            <Image url="@../images/copy_clipboard.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="copyUsernameButton" mnemonicParsing="false" styleClass="copy-clipboard-button" onAction="#copyToClipboard" GridPane.columnIndex="2" GridPane.rowIndex="3">
                    <graphic>
                        <ImageView>
                            <Image url="@../images/copy_clipboard.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="copyEmailAddressButton" mnemonicParsing="false" styleClass="copy-clipboard-button" onAction="#copyToClipboard" GridPane.columnIndex="2" GridPane.rowIndex="4" >
                    <graphic>
                        <ImageView>
                            <Image url="@../images/copy_clipboard.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="copyPasswordButton" mnemonicParsing="false" styleClass="copy-clipboard-button" onAction="#copyToClipboard" GridPane.columnIndex="2" GridPane.rowIndex="5">
                    <graphic>
                        <ImageView>
                            <Image url="@../images/copy_clipboard.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="generatePasswordButton" id="generate-pwd-button" mnemonicParsing="false" onAction="#generatePassword" GridPane.columnIndex="3"
                        GridPane.rowIndex="5">
                    <graphic>
                        <ImageView>
                            <Image url="@../images/generate_pwd.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <CheckBox fx:id="showPasswordCheckBox" mnemonicParsing="false" text="Show password" GridPane.columnIndex="1"
                          GridPane.rowIndex="6"/>
            </GridPane>
            <HBox fx:id="dialogButtons" alignment="CENTER" prefHeight="73.0" prefWidth="270.0" spacing="20.0">
                <Button fx:id="saveButton" mnemonicParsing="false" text="Save" onAction="#save" />
                <Button mnemonicParsing="false" text="Cancel" onAction="#cancel" />
            </HBox>
        </VBox>
    </AnchorPane>
</ScrollPane>
