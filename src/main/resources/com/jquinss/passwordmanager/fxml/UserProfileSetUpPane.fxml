<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Tooltip?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="420.0" prefWidth="580.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" styleClass="profile-dialog"
            fx:controller="com.jquinss.passwordmanager.controllers.UserProfileSetUpPaneController">
    <VBox alignment="CENTER" layoutX="75.0" layoutY="48.0" prefHeight="352.0" prefWidth="450.0" spacing="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="75.0" AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="48.0">
        <HBox prefHeight="27.0" prefWidth="400.0">
            <Label styleClass="profile-dialog-title" text="Create a profile:" />
        </HBox>
        <GridPane hgap="15.0" prefWidth="404.0" vgap="22.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="244.0" minWidth="10.0" prefWidth="136.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="418.0" minWidth="10.0" prefWidth="249.0" />
            <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label styleClass="form-label" text="Profile name:" />
            <TextField fx:id="userProfileNameTextField" promptText="Enter profile name" GridPane.columnIndex="1"
                       styleClass="profile-dialog-textfield" />
            <Label styleClass="form-label" text="Default:" GridPane.rowIndex="1" />
            <CheckBox fx:id="defaultProfileCheckBox" mnemonicParsing="false" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <Label styleClass="form-label" text="Password:" GridPane.rowIndex="2" />
            <PasswordField fx:id="passwordField" promptText="Enter password"
                           GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="dialog-textfield" />
            <Label styleClass="form-label" text="Confirm Password:" GridPane.rowIndex="3" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm password"
                           GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="profile-dialog-textfield" />
            <CheckBox fx:id="generateKeyPairCheckBox" mnemonicParsing="false" selected="true" GridPane.rowIndex="4" />
            <Label styleClass="form-label" text="Generate public and private key-pair" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField fx:id="publicKeyTextField" promptText="Select a public key" disable="true" editable="false"
                       GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="profile-dialog-textfield" />
            <Label GridPane.columnIndex="2" GridPane.rowIndex="5">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" >
                        <image>
                            <Image url="@../images/question_mark.png" />
                        </image>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip text="Select a PEM encoded public key"/>
                </tooltip>
            </Label>
            <Button fx:id="publicKeySelectButton" disable="true" mnemonicParsing="false" onAction="#selectPublicKey"
                    prefHeight="40" prefWidth="100" styleClass="btn, select-btn" text="Public Key" GridPane.rowIndex="5" />
            <Button fx:id="privateKeySelectButton" disable="true" mnemonicParsing="false" onAction="#selectPrivateKey"
                    prefHeight="40" prefWidth="100" styleClass="btn, select-btn" text="Private Key" GridPane.rowIndex="6" />
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <TextField fx:id="privateKeyTextField" promptText="Select a private key" disable="true" editable="false"
                       GridPane.columnIndex="1" GridPane.rowIndex="6" styleClass="profile-dialog-textfield" />
            <Label GridPane.columnIndex="2" GridPane.rowIndex="6">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" >
                        <Image url="@../images/question_mark.png" />
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip text="Select a PEM encoded private key"/>
                </tooltip>
            </Label>
        </GridPane>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
            <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#createUserProfile" prefHeight="40" prefWidth="100" styleClass="btn, add-btn" text="Create" />
            <Button mnemonicParsing="false" onAction="#cancelMenu" prefHeight="40" prefWidth="100" styleClass="btn, remove-btn" text="Cancel" />
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <Label fx:id="message" text="Placeholder" visible="false" />
        </HBox>
    </VBox>
</AnchorPane>
